.links-of-author { margin-top: 20px; }

.links-of-author a {
  display: inline-block;
  vertical-align: middle;
  margin-right: 10px;
  margin-bottom: 10px;
  border-bottom: 0px;
  //border-bottom-color: $black-light;
  font-size: 13px;

  i,img{
    opacity: 0.6;
    width : 32px;
    height: 32px;
    font-size: 32px;
    transition: all 0.5s;
  }

  &:hover i{
    opacity: 1;
  }

  &:hover img{
    opacity: 1;
  }


